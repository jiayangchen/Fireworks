<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="me.chenjiayang.dao.BlogDao">
    <select id="getAll" resultType="me.chenjiayang.entity.Blog">
        SELECT * FROM `Blog`
    </select>

    <select id="getAllDescByPage" parameterType="java.lang.Integer" resultType="me.chenjiayang.entity.Blog">
        SELECT * FROM `Blog`
        ORDER BY createTime LIMIT #{page}, 11
    </select>

    <insert id="insert" parameterType="Blog">
        INSERT INTO `Blog`(blogTitle, createTime, blogContent, blogTag)
        VALUES (#{blogTitle}, #{createTime}, #{blogContent}, #{blogTag})
    </insert>

    <update id="update" parameterType="Blog">
        UPDATE `Blog`
        SET blogContent = #{blogContent}
        WHERE blogTitle = #{blogTitle}
    </update>
</mapper>